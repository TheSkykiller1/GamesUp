<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="15dp"
    android:paddingTop="5dp"
    android:background="#ffffff"
    android:orientation="vertical"
    >
   <!-- <ImageView
        android:id="@+id/games_pic"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:contentDescription="desc"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />-->
    <TextView
        android:id="@+id/text_titre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:paddingBottom="5dp"
        android:text="txt"
        android:textColor="#000000"
        android:textSize="20sp" /> <!--android:layout_toRightOf="@+id/games_pic"-->

    <TextView
        android:id="@+id/text_plateforme"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_titre"
        android:layout_below="@+id/text_titre"
        android:text="txt"
        android:textColor="#0b6aa6"
        android:textSize="16sp" />

    <TextView
        android:icon="@drawable/ic_menu_send"
        android:textStyle="bold"
        android:id="@+id/text_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/text_plateforme"
        android:layout_below="@+id/text_plateforme"
        android:text="txt"
        android:textColor="#0b6aa6"
        android:textSize="16sp" />

    <Button
        android:id="@+id/text_but_follow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_plateforme"
        android:layout_marginTop="34dp"
        android:background="#c40005"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/but_follow"
        android:textSize="12sp"
        android:textStyle="bold" />

</RelativeLayout>